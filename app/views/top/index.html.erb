<% content_for :sub_header_menu do %>
    <div id="sub_header_menu" class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav">
            <li><%= link_to :New, "/users/new"  %></li>
            <li><%= link_to :Tag, "/users/new"  %></li>
            <li><%= link_to :Search, "/users/new"  %></li>
          </ul>
        </div>
      </div>
    </div>
<% end %>

<div id="<%= controller_name %>_<%= action_name %>">

  <!-- items -->
  <div class="item_box">
    <ul class="items">
      <% @items.each do |item| %>
        <!-- item -->
        <li class="item" data-item_id="<%= item.id %>">
          <div class="side_top">
            <a href="/items/<%= item.id %>">
              <%= icon_image_tag item.image_l, alt: item.title %>
            </a>
            <p>
              <%= item.title %>
            </p>
          </div>
          <div class="service_icon">
            <%= image_tag "/assets/service/icon_#{item.service_code}.png", title: item.title %>
          </div>
        </li>
        <!-- /item-->
      <% end %>
    </ul>
  </div>
  <!-- /items -->

</div>

